#!/bin/sh
set -e -u -x
xhost +local:root
# https://github.com/Gallopsled/pwntools/issues/1575
# https://stackoverflow.com/a/20923794/3832536
exec docker run \
    --env=DISPLAY="$DISPLAY" \
    --env=PWNLIB_NOTERM=1 \
    --env=PYTHONIOENCODING=utf-8 \
    --interactive \
    --rm \
    --tty \
    --volume="$PWD:$PWD" \
    --volume=/tmp/.X11-unix:/tmp/.X11-unix \
    --workdir="$PWD" \
    gosu_bof \
    ./pwnit.py "$@"
